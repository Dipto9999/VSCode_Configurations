{
	// Place your snippets for python here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	
	"Author Comment": {
		"prefix": "author",
		"body": [
			"## Author : ${1:name}",
			"## Date : ${2:date}",
			"## Purpose : ${3:purpose}"
		],
		"description": "Standard Script Description."
	},

	"Test Comment": {
		"prefix": "tst",
		"body": [
			"## The following lines have been commented out. -> Used for debugging ${1:code_segment}.",
			"print(f'${2:description} : {${3:variable}} ${4:newline}')" 
		],
		"description": "Standard Debugging Comment."
	},

	"General Function": {
		"prefix": "fnc",
		"body": [
			"def ${1:name}(${2:param_list}) :",
			"$3" 
		],
		"description": "Standard Function Skeleton."
	}

}